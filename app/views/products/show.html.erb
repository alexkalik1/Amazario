<p id="notice"><%= notice %></p>

<p id="image">
  <img src="<%= @product.image_url %>" class="product_img"/>
</p>
<div class="container-fluid text-center">
<img src="http://www.ikea.com/ms/media/seorange/20151/20151_lica07a_modular_sofas_PH133286.jpg" class="img-thumbnail" alt="Cinque Terre" width="304" height="236">
</div>



<div class="container text-center"

<div class="conatainer"
<p id="name">
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.formatted_price %>
</p>

<p id="cart">
<%= form_for @order_item do |f| %>
  <%= f.hidden_field :product_id, value: @product.id %>
  <%= f.submit "Add to Cart", class: "btn-danger" %>
<% end %>
</p>
</div>
<div class="container text-center">

<h2>Reviews</h2>
<% @product.reviews.each do |review| %>
  <p>
    <%= review.comment %>
    <br>
    Added on: <%= review.created_at %>
  </p>
  <hr>
<% end %>


</div>
</div>

<div class="container text-center">
     <h2>New Review</h2>
     <!-- <span class="label label-default">Default</span> -->
     <%= render 'reviews/form' %>
</div>
