<h6>Welcome</h6>
<div class="signup-form">
<%= form_for :user, url: '/users' do |f| %>
  <h5>Name: <%= f.text_field :name %></h5>
  <h5>Email: <%= f.text_field :email %></h5>
  <h5>Password: <%= f.password_field :password %></h5>
  <h5>Password Confirmation: <%= f.password_field :password_confirmation %></h5>
  <button class="signup-btn"><%= f.submit "Sign Up" %></button>
  <% end %>
</div>
