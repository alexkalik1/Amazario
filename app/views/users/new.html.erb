<div class="container">
        <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
        	<div class="panel panel-default">
        		<div class="panel-heading">
			    		<h3 class="panel-title">Welcome It's free!<br><small>for now</small></h3>
			 			</div>
			 			<div class="panel-body">
			    		<!-- <form role="form"> -->
                              <%= form_for :user, url: '/users' do |f| %>
			    			<div class="row">
			    				<div class="container-fluid">
			    					<div class="form-group">
                                             <%= f.text_field :name, placeholder: 'Full Name', class: 'form-control input-sm' %>
			                <!-- <input type="text" name="first_name" id="first_name" class="form-control input-sm" placeholder="Full Name"> -->
			    					</div>
			    				</div>
			    			</div>

			    			<div class="form-group">
                                   <%= f.text_field :email, placeholder: 'Email Address', class: 'form-control input-sm' %>
			    				<!-- <input type="email" name="email" id="email" class="form-control input-sm" placeholder="Email Address"> -->
			    			</div>

			    			<div class="row">
			    				<div class="col-xs-6 col-sm-6 col-md-6">
			    					<div class="form-group">
                                             <%= f.password_field :password, placeholder: 'Password', class: 'form-control input-sm' %>
			    						<!-- <input type="password" name="password" id="password" class="form-control input-sm" placeholder="Password"> -->
			    					</div>
			    				</div>
			    				<div class="col-xs-6 col-sm-6 col-md-6">
			    					<div class="form-group">
                                             <%= f.password_field :password_confirmation, placeholder: 'Confirm Password', class: 'form-control input-sm' %>
			    						<!-- <input type="password" name="password_confirmation" id="password_confirmation" class="form-control input-sm" placeholder="Confirm Password"> -->
			    					</div>
			    				</div>
			    			</div>
                              <%= f.submit "Sign Up" , class: 'btn btn-info btn-block' %>
			    			<!-- <input type="submit" value="Register" class="btn btn-info btn-block"> -->
                              <% end %>
			    		<!-- </form> -->
			    	</div>
	    		</div>
    		</div>
    	</div>
    </div>
